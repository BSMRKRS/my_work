import RoboPiLib as RPL
import setup
import time
sensor_pin = 16
sensor_pin1 = 18

RPL.pinMode(sensor_pin,RPL.INPUT)
RPL.pinMode(sensor_pin1,RPL.INPUT)
running=True

reading=RPL.digitalRead(sensor_pin)
reading1=RPL.digitalRead(sensor_pin1)
number=0
while running:
	reading=RPL.digitalRead(sensor_pin)

	reading1=RPL.digitalRead(sensor_pin1)
	if reading==0:
		RPL.servoWrite(0,1400)
		time.sleep(1)
		RPL.servoWrite(0,00)
		number+=1
		num2=str(number)
		print("The motor has pulsed "+ num2+ " times!")
	if reading1==0:
		running=False










	

		









		 	
