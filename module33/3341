import RoboPiLib as RPL
import setup

import time
sensor_pin = 16


RPL.pinMode(sensor_pin,RPL.INPUT)
x=[1,2,3]
scene = False
reading=RPL.digitalRead(sensor_pin)
while not scene:
	print(reading)
	reading=RPL.digitalRead(sensor_pin)

	if reading == 0:

		scene =True 
		for i in x:
			RPL.servoWrite(0,1400)
			time.sleep(1)
			RPL.servoWrite(0,00)

			time.sleep(1)
			i+=1		
