import RoboPiLib as RPL
import setup
sensor_pin=1
sensor_pin1=17
print("working")
RPL.pinMode(sensor_pin1,RPL.INPUT)
print("working")
running=True
print("working")
whyGod=0

reading1=RPL.digitalRead(sensor_pin1)

while running:
	print RPL.analogRead(sensor_pin)	
	reading1=RPL.digitalRead(sensor_pin1)
	reading=RPL.analogRead(sensor_pin)	
	if reading<500:
		RPL.servoWrite(0,1400)
		RPL.servoWrite(1,1400)
	elif reading>=500:
		RPL.servoWrite(1,1450)
		RPL.servoWrite(0,1450)
	if reading1==0 :
		running=False
	whyGod+=1
