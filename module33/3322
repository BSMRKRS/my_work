import RoboPiLib as RPL
import setup 
sensor_pin = 16 
sensor_pin1 = 17
sensor_pin2 = 18
RPL.pinMode(sensor_pin,RPL.INPUT)
RPL.pinMode(sensor_pin1,RPL.INPUT)
RPL.pinMode(sensor_pin2,RPL.INPUT)
running=True

reading=RPL.digitalRead(sensor_pin)
reading1=RPL.digitalRead(sensor_pin1)
reading2=RPL.digitalRead(sensor_pin2)

while running:
	reading=RPL.digitalRead(sensor_pin)
	reading1=RPL.digitalRead(sensor_pin1)



	reading2=RPL.digitalRead(sensor_pin2)
	print(reading)
	print(reading1)
	print(reading2)


	if(reading==0 and reading1==1):

		RPL.servoWrite(1,1400)


	elif (reading==1 and reading1==0):
		RPL.servoWrite(1,1400)

	elif (reading==0 and reading1==0):
		RPL.servoWrite(1,1400)
	else:
		RPL.servoWrite(1,1500)
	if (reading2==0):
		running=False
